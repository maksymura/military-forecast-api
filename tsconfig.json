{
  "compilerOptions": {
    "sourceMap": false,
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "outDir": "dist",
    "baseUrl": "./src",
  },
  "include": ["src/**/*"]
}
